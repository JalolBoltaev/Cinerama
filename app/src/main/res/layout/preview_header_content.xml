<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:id="@+id/headerContent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <View

            android:id="@+id/viewShadow"
            android:layout_width="0dp" android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/imageViewPreview"
            android:background="@drawable/shadow_bottom"
    />


    <TextView
            android:id="@+id/textImdb"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/viewShadow"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="24dp"
            android:textSize="16sp"
            android:fontFamily="@font/productsans_black"
            android:text="IMDb"
            android:textColor="#ffa45b"
    />

    <TextView
            android:id="@+id/textViewImbdRate"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/textImdb"
            app:layout_constraintTop_toTopOf="@id/textImdb"
            app:layout_constraintBottom_toBottomOf="@id/textImdb"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:fontFamily="@font/productsans_black"
            android:textColor="@color/white"
            android:text="0.0"
    />

    <TextView
            android:id="@+id/textKinopoisk"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/textViewImbdRate"
            app:layout_constraintTop_toTopOf="@id/textImdb"
            app:layout_constraintBottom_toBottomOf="@id/textImdb"
            android:layout_marginLeft="12dp"
            android:textColor="@color/white"
            android:alpha="0.8"
            android:fontFamily="@font/productsans_regular"
            android:text="Кинопоиск : "
    />

    <TextView
            android:id="@+id/textKinopoiskRate"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/textKinopoisk"
            app:layout_constraintTop_toTopOf="@id/textKinopoisk"
            app:layout_constraintBottom_toBottomOf="@id/textKinopoisk"
            android:layout_marginLeft="8dp"
            android:textColor="@color/white"
            android:alpha="0.8"
            android:fontFamily="@font/productsans_regular"
            android:text="0.0      |"
    />

    <TextView
            android:id="@+id/textyear"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/textKinopoiskRate"
            app:layout_constraintTop_toTopOf="@id/textKinopoiskRate"
            app:layout_constraintBottom_toBottomOf="@id/textKinopoiskRate"
            android:layout_marginLeft="12dp"
            android:textColor="@color/white"
            android:alpha="0.8"
            android:fontFamily="@font/productsans_regular"
            android:text="Year : "
    />

    <TextView
            android:id="@+id/textViewYear"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/textyear"
            app:layout_constraintTop_toTopOf="@id/textyear"
            app:layout_constraintBottom_toBottomOf="@id/textyear"
            android:layout_marginLeft="8dp"
            android:textColor="@color/white"
            android:alpha="0.8"
            android:fontFamily="@font/productsans_regular"
            android:text=""
    />

    <TextView
            android:id="@+id/textViewGenre"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@id/textImdb"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/white"
            android:text=""
            android:fontFamily="@font/productsans_regular"
            android:maxLines="1"
            android:ellipsize="end"

    />


    <com.hanks.htextview.scale.ScaleTextView
            android:id="@+id/textViewActors"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@id/textViewGenre"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/white"
            android:fontFamily="@font/productsans_regular"
    />


    <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@id/textViewActors"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/white"
            android:text=""
            android:fontFamily="@font/productsans_black"
            android:maxLines="2"
            android:ellipsize="end"

    />

</android.support.constraint.ConstraintLayout>